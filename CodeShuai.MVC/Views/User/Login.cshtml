
@{
    ViewData["Title"] = "Login";
}
<style>
    html, body {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
    }

    .csJZ {
        width: 80%;
        height: 40%;
        margin: 0 auto; /*水平居中*/
        /*position: relative;*/
        top:50%;
        margin-top: -50%;
    }
</style>

    <div class="card csJZ ">
        <div class="csM-20 ">
            <div class="form-group">
                <label>Account</label>
                <input type="text" class="form-control" id="UserAccount">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" id="UserPassword">
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="UserRemember">
                <label class="form-check-label" for="UserRemember">Check me out</label>
            </div>
            <button id="LoginBtn" onclick="Login()" class="btn btn-primary  btn-lg btn-block">Submit</button>
        </div>
    </div>


